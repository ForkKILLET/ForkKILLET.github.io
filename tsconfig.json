{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": [ // Avoid @types/node
      "js-yaml",
      "katex",
      "marked",
      "node-emoji",
      "prismjs",
    ],
    "paths": {
      "@/*": ["src/*"],
      "@comp/*": ["src/components/*"],
      "@util/*": ["src/utils/*"],
      "@store/*": ["src/stores/*"],
      "@pack": ["package.json"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
